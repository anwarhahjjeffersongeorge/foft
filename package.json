{
  "name": "mathoftjs",
  "version": "1.0.0",
  "description": "Evaluation of math terms over specified ranges.",
  "main": "lib/index.js",
  "module": "lib/main.js",
  "scripts": {
    "clean": "rm -rf docs test coverage ./mathoftmochajs.html",
    "predocs": "clear && rm -rf docs",
    "docs": "npx jsdoc --configure .jsdoc.json --verbose",
    "pretest": "clear && rm -rf test && npx babel src --out-dir test; cp src/mocha/mathoftmochajs.html ./",
    "test": "npx cross-env NODE_ENV=test nyc --require @babel/register --require esm --reporter=text mocha ./test/mocha/mathoftmocha.js",
    "prebuild": "clear && rm -rf lib",
    "build": "npx cross-env NODE_ENV=production babel src --out-dir lib --ignore \"src/mocha/\"",
    "postbuild": "minify lib/*.js > lib/mathoft-min.js",
    "predev": "clear && rm -rf dist",
    "dev": "webpack -r esm --watch"
  },
  "repository": {
    "type": "git",
    "url": "pi@raspberrypi:/home/pi/GIT/mathoftjs"
  },
  "keywords": [],
  "author": "Anwar Hahj Jefferson-George <anwarhahjjeffersongeorge@gmail.com>",
  "license": "ISC",
  "nyc": {
    "exclude": [
      "coverage/**",
      "**/node_modules/**"
    ],
    "sourceMap": false,
    "instrument": false,
    "reporter": "html"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-istanbul": "^5.0.1",
    "chai": "^4.2.0",
    "chai-arrays": "^2.0.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^5.2.0",
    "esm": "^3.0.84",
    "jsdoc": "^3.5.5",
    "minify": "^4.1.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  }
}
